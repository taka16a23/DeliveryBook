<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.no_ip.taka16.deliverybook">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".delivering.DeliveringActivity"
            android:label="@string/title_screen_slide"
            android:parentActivityName=".MainActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".frame.FrameFormActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".simple_recyclerview.FrameListActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".book.BookActivity" />
        <activity
            android:name=".book.BookListActivity"
            android:theme="@style/Theme.AppCompat"
            />
        <activity
            android:name=".book.BookAdditionActivity"
            android:theme="@style/Theme.AppCompat"
            />
    </application>

</manifest>
