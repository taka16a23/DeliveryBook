        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="DarkActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditTextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#ffffff</item>
        <!--<item name="android:textSize">20sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/editTextHintColor</item>
        <item name="colorControlNormal">@color/editTextHintColor</item>
        <item name="colorControlActivated">@color/editTextHintColor</item>
    </style>
</resources>
