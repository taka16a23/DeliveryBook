<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Dummy content. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/delivering_deliverable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fd9701"
            android:gravity="bottom"
            android:minHeight="170dp"
            android:paddingBottom="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="papers"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_name"
            style="?android:textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/delivering_deliverable"
            android:height="@android:dimen/notification_large_icon_width"
            android:background="#f47c01"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="2dp"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="97dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/delivery_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/display_name"
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:paddingLeft="16dp"
            android:textColor="#7cdae6"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.45">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/delivering_description"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/address_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:clickable="true"
                app:srcCompat="@mipmap/ic_address" />

            <TextView
                android:id="@+id/display_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="Address"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/delivering_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/delivery_state"
            android:fadingEdge="horizontal"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:text="description"
            android:textColor="#fd9901"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/delivering_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1.27"
            android:autoText="true"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:text="0 / 0"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>
