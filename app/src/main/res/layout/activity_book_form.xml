<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="info.no_ip.taka16.deliverybook.book.BookFormActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:hint="@string/area_name"
        android:id="@+id/textInputLayout2"
        android:theme="@style/EditTextLabel">

        <EditText
            android:id="@+id/edit_area_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#fd3076"
            android:ems="10"
            android:inputType="text"
            android:paddingRight="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="#fd3076"
            android:textColorLink="#fd3076"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="35dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/area_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textInputLayout2"
        android:layout_marginTop="21dp"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="88dp" />

</RelativeLayout>
